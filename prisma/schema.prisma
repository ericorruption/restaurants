// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  password String
  name     String?
  role     Role    @default(USER)
}

model Restaurant {
  id      String @id @default(uuid())
  ownerId String
  name    String
}

enum Role {
  USER
  OWNER
  ADMIN
}

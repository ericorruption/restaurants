// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  password String
  name     String?
  role     Role    @default(USER)
}

model Restaurant {
  id      String   @id @default(uuid())
  ownerId String
  name    String
  reviews Review[]
}

model Review {
  id           String     @id @default(uuid())
  visitedAt    DateTime
  rating       Int
  comment      String
  Restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
  restaurantId String
  userId       String
}

model Reply {
  reviewId String @id
  comment  String
}

enum Role {
  USER
  OWNER
  ADMIN
}
